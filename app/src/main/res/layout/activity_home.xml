<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/iv_app_logo_small"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Hello there!"
        android:textColor="@color/textSubtle"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Your Daily Summary"
        android:textColor="@color/textDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_greeting"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting" />

    <!-- Date Navigation -->
    <LinearLayout
        android:id="@+id/layout_date_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <ImageButton
            android:id="@+id/btn_previous_day"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Previous day" />

        <TextView
            android:id="@+id/tv_current_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today, Nov 2"
            android:textAlignment="center"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_next_day"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Next day" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/profileGray"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_greeting">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="U"
            android:textColor="@color/textDark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <!-- Calorie Summary Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_calorie_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/primaryGreenLight"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_date_navigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Circular Progress -->
            <ProgressBar
                android:id="@+id/pb_kcal_main"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminate="false"
                android:max="2200"
                android:progress="0"
                android:progressDrawable="@drawable/shape_circle_progress_primary"
                android:rotation="-90"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_kcal_consumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/textDark"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_kcal_label"
                app:layout_constraintEnd_toEndOf="@id/pb_kcal_main"
                app:layout_constraintStart_toStartOf="@id/pb_kcal_main"
                app:layout_constraintTop_toTopOf="@id/pb_kcal_main"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_kcal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kcal"
                android:textColor="@color/textDark"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/pb_kcal_main"
                app:layout_constraintEnd_toEndOf="@id/tv_kcal_consumed"
                app:layout_constraintStart_toStartOf="@id/tv_kcal_consumed"
                app:layout_constraintTop_toBottomOf="@id/tv_kcal_consumed" />


            <!-- Remaining Text -->
            <TextView
                android:id="@+id/tv_remaining_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                android:textColor="@color/textDark"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/tv_kcal_remaining"
                app:layout_constraintStart_toStartOf="@id/tv_kcal_remaining"
                app:layout_constraintTop_toTopOf="@id/pb_kcal_main"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_kcal_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2200"
                android:textColor="@color/textDark"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_kcal_goal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pb_kcal_main"
                app:layout_constraintTop_toBottomOf="@id/tv_remaining_label" />

            <TextView
                android:id="@+id/tv_kcal_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal: 2200 kcal"
                android:textColor="@color/textDark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/pb_kcal_main"
                app:layout_constraintStart_toStartOf="@id/tv_kcal_remaining"
                app:layout_constraintTop_toBottomOf="@id/tv_kcal_remaining" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <!-- Macro Cards -->
    <LinearLayout
        android:id="@+id/layout_macros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/card_calorie_summary"
        app:layout_constraintStart_toStartOf="@id/card_calorie_summary"
        app:layout_constraintTop_toBottomOf="@id/card_calorie_summary">

        <!-- Protein Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/cardWhiteBg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_protein_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textColor="@color/textDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_protein_placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/proteinColor" />

                <TextView
                    android:id="@+id/tv_protein_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 / 120g"
                    android:textColor="@color/textDark"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_protein_label" />

                <ProgressBar
                    android:id="@+id/pb_protein"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:max="120"
                    android:progress="0"
                    android:progressDrawable="@drawable/shape_progress_bar_protein"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_protein_progress" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <!-- Fat Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/cardWhiteBg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_fat_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat"
                    android:textColor="@color/textDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fat_placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/fatColor" />

                <TextView
                    android:id="@+id/tv_fat_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 / 70g"
                    android:textColor="@color/textDark"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_fat_label" />

                <ProgressBar
                    android:id="@+id/pb_fat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:max="70"
                    android:progress="0"
                    android:progressDrawable="@drawable/shape_progress_bar_fat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_fat_progress" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Meal List -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="@id/layout_macros"
        app:layout_constraintStart_toStartOf="@id/layout_macros"
        app:layout_constraintTop_toBottomOf="@id/layout_macros">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <include
                android:id="@+id/layout_breakfast"
                layout="@layout/item_meal" />

            <include
                android:id="@+id/layout_lunch"
                layout="@layout/item_meal"
                android:layout_marginTop="12dp" />

            <include
                android:id="@+id/layout_snack"
                layout="@layout/item_meal"
                android:layout_marginTop="12dp" />

            <include
                android:id="@+id/layout_dinner"
                layout="@layout/item_meal"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardWhiteBg"
        app:itemIconSize="28dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

